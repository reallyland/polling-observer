{
  "testEnvironment": "node",
  "collectCoverage": true,
  "coverageDirectory": "./coverage",
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "collectCoverageFrom": [
    "!**/node_modules/**",
    "!<rootDir>/dist/demo/**/*.js?(x)",
    "!<rootDir>/dist/test*/**/*?(.spec).js?(x)",
    "<rootDir>/dist/**/*.js?(x)"
  ],
  "verbose": true,
  "bail": true,
  "roots": [
    "<rootDir>/dist/"
  ],
  "testMatch": [
    "<rootDir>/dist/test*/index.spec.js?(x)"
  ]
}
